<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exception_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|clip_vertical|clip_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/exception_retry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/color_f5f5f5"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:src="@mipmap/no_internet" />

            <TextView
                android:id="@+id/exception_title"
                style="@style/exception.message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/str_wang_luo_lian_jie_yi_chang" />

            <TextView
                android:id="@+id/exception_message"
                style="@style/exception.message"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/rec_stoke_main_100"
                android:text="重新加载"
                android:textColor="#ffff5800"
                android:textSize="14sp"
                android:visibility="visible" />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>