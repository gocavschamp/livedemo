<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_card_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_20"
    android:clickable="true"
    android:gravity="bottom">


    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/rec_white_r_top20"
            android:gravity="center_horizontal"
            android:minHeight="@dimen/dp_150">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="神医华佗"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_toRightOf="@id/name"
                    android:text="教授"
                    android:textColor="@color/color_484a4e"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_top"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="外科-儿童"
                    android:textColor="@color/color_484a4e"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/office"
                    android:text="清华大学附属医院"
                    android:textColor="@color/color_484a4e"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/rl_bottom"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/color_f5f5f5" />

            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_bottom"
                android:layout_marginTop="@dimen/dp_20"
                android:maxHeight="@dimen/dp_200"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:scrollbars="vertical"
                android:textColor="@color/color_484a4e"
                android:textSize="12sp"
                android:text=" 新疆医科大学第一附属医院,第四军医大学唐都医院,联勤保障部队第940医院,西安交通大学第一附属医院,第四军医大学（空军军医大学）附属西京医院,新疆医科大学附属肿瘤医院,联勤保障部队第九四〇医院,西安交通大学第二附属医院,新疆维吾尔自治区人民医院,新疆医科大学第一附属医院,青海大学附属医院,新疆石河子大学医学院第一附属医院,新疆克拉玛依市中心医院,甘肃省人民医院,新疆维吾尔自治区人民医院,新疆喀什地区第一人民医院,宁夏医科大学总医院 " />

        </RelativeLayout>

        <com.nucarf.base.widget.CircleImageView
            android:id="@+id/head"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/tv_close"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="@dimen/dp_8"
            android:src="@mipmap/close" />
    </RelativeLayout>
</RelativeLayout>