<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/rl_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_other_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王大拿"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <com.nucarf.base.widget.CircleImageView
            android:id="@+id/head_other"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@id/tv_other_name"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/color_f5f5f5"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tv_other_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/head_other"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/head_other"
            android:background="@drawable/rec_white_stoke_eee_4"
            android:padding="@dimen/dp_10"
            tools:text="发送一个信息啦啦啦啦啦啦啦啦"
            android:textColor="@color/color_333333"
            android:textSize="13sp" />
        <ImageView
            android:id="@+id/tv_other_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/head_other"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:scaleType="centerInside"
            android:elevation="@dimen/dp_1"
            android:layout_toRightOf="@id/head_other"
            android:background="@drawable/rec_white_stoke_eee_4"
            android:padding="@dimen/dp_10"
          />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="王大拿"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <com.nucarf.base.widget.CircleImageView
            android:id="@+id/head_mine"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@id/tv_mine_name"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/color_f5f5f5"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tv_mine_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/head_mine"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toLeftOf="@id/head_mine"
            android:background="@drawable/rec_white_stoke_eee_4"
            android:padding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            tools:text="发送一个信息啦啦啦啦啦啦啦啦"
            android:textColor="@color/color_333333"
            android:textSize="13sp" />
        <ImageView
            android:id="@+id/tv_mine_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/head_mine"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_15"
            android:scaleType="centerInside"
            android:elevation="@dimen/dp_1"
            android:layout_toLeftOf="@id/head_mine"
            android:background="@drawable/rec_white_stoke_eee_4"
            android:padding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
           />
    </RelativeLayout>

</RelativeLayout>