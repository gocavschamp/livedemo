    <style name="ToolBarStyleCenter" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:theme">@style/Center_ActionBarStyle</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:elevation" tools:ignore="NewApi">20dp</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="layout_collapseMode">pin</item>
        <item name="contentInsetStart">0dp</item>
    </style>
    <style name="Center_ActionBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">#8fff</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>
    <style name="CommunityFragment_TabLayout" parent="">
        <!--Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="tabSelectedTextColor">@color/black_60</item>
        <item name="tabTextAppearance">@style/CommunityFragment_TabText</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicatorColor">@color/main_color</item>
        <item name="rippleColor">#00000000</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/color_f6f6f6</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:elevation" tools:ignore="NewApi">0.5dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>
    <style name="CommunityFragment_TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="Text1Style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="AppTheme.NoActionBar.FullScreen" parent="FullScreen"></style>

    <style name="Theme.MaterialSheetFab.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
<!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <color name="color_eeeeee">#eeeeee</color>
    <color name="main_color">#ff5850</color>
